# University Management System - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# BASIC CONFIGURATION - الإعدادات الأساسية
# =============================================================================

# Django Settings
DEBUG=True
SECRET_KEY=change-this-to-a-secure-secret-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION - إعدادات قاعدة البيانات
# =============================================================================

# PostgreSQL (Production)
DATABASE_URL=postgresql://university_user:university_pass@localhost:5432/university_db

# SQLite (Development) - uncomment for development
# DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# CACHE & REDIS CONFIGURATION - إعدادات التخزين المؤقت
# =============================================================================

REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION - إعدادات البريد الإلكتروني
# =============================================================================

# Console Backend (Development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Configuration (Production) - uncomment and configure for production
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@university.edu

# =============================================================================
# UNIVERSITY SETTINGS - إعدادات الجامعة
# =============================================================================

UNIVERSITY_NAME=جامعة المستقبل
UNIVERSITY_NAME_EN=Future University
UNIVERSITY_CODE=FU

# Academic Settings
CURRENT_ACADEMIC_YEAR=2024-2025
CURRENT_SEMESTER=1

# =============================================================================
# API CONFIGURATION - إعدادات واجهة برمجة التطبيقات
# =============================================================================

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# =============================================================================
# SECURITY SETTINGS - إعدادات الأمان
# =============================================================================

# Security Headers (Production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# For production, set these to True when using HTTPS
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# =============================================================================
# LOGGING & MONITORING - التسجيل والمراقبة
# =============================================================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log Level
LOG_LEVEL=INFO

# =============================================================================
# FILE STORAGE - تخزين الملفات
# =============================================================================

# Local storage (default)
USE_LOCAL_STORAGE=True

# AWS S3 Storage (Production) - uncomment and configure if needed
# USE_S3_STORAGE=False
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# =============================================================================
# DEVELOPMENT SETTINGS - إعدادات التطوير
# =============================================================================

# Django Debug Toolbar (Development only)
ENABLE_DEBUG_TOOLBAR=True

# API Rate Limiting
API_RATE_LIMIT_ENABLED=True
API_RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# BACKUP & MAINTENANCE - النسخ الاحتياطي والصيانة
# =============================================================================

# Database backup settings
BACKUP_ENABLED=False
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=7

# Maintenance mode
MAINTENANCE_MODE=False

# =============================================================================
# NOTES - ملاحظات
# =============================================================================

# 1. Generate a secure SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(50))"
# 2. For production, set DEBUG=False
# 3. Update ALLOWED_HOSTS with your domain names
# 4. Configure email settings for production use
# 5. Set up proper database credentials
# 6. Enable HTTPS settings in production