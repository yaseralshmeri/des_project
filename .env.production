# University Management System - Production Environment
# إعدادات الإنتاج لنظام إدارة الجامعة

# =============================================================================
# SECURITY SETTINGS - إعدادات الأمان
# =============================================================================

# CRITICAL: Change this to a secure secret key in production
SECRET_KEY=CHANGE-ME-TO-SECURE-SECRET-KEY-IN-PRODUCTION

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - Add your domain names
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION - إعداد قاعدة البيانات
# =============================================================================

# PostgreSQL for production
DATABASE_URL=postgresql://university_user:secure_password@localhost:5432/university_db

# =============================================================================
# EMAIL CONFIGURATION - إعداد البريد الإلكتروني
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# CACHE AND PERFORMANCE - التخزين المؤقت والأداء
# =============================================================================

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0

# =============================================================================
# UNIVERSITY SETTINGS - إعدادات الجامعة
# =============================================================================

UNIVERSITY_NAME=جامعة المستقبل
UNIVERSITY_NAME_EN=Future University
UNIVERSITY_CODE=FU
CURRENT_ACADEMIC_YEAR=2024-2025
CURRENT_SEMESTER=1

# =============================================================================
# CORS AND API SETTINGS - إعدادات CORS وواجهة برمجة التطبيقات
# =============================================================================

CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# LOGGING AND MONITORING - التسجيل والمراقبة
# =============================================================================

# Enable file logging in production
ENABLE_FILE_LOGGING=True

# Sentry for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# STATIC AND MEDIA FILES - الملفات الثابتة والوسائط
# =============================================================================

# Use cloud storage for static/media files (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# BACKUP SETTINGS - إعدادات النسخ الاحتياطي
# =============================================================================

# Database backup settings
# BACKUP_DATABASE_URL=postgresql://backup_user:backup_pass@backup_host:5432/backup_db
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# ADDITIONAL PRODUCTION SETTINGS
# =============================================================================

# Force HTTPS
USE_HTTPS=True

# Session security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Additional security headers
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True