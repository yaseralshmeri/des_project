# Production Environment Variables for University Management System
# Copy this file to .env.production and update with your actual values

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com,localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=university_db
POSTGRES_USER=university_user
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://university_user:your-secure-database-password@db:5432/university_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379/1

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/0
CELERY_WORKER_CONCURRENCY=4

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django_anymail.backends.sendgrid.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=admin@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENVIRONMENT=production
RELEASE_VERSION=1.0.0

# =============================================================================
# FLOWER MONITORING
# =============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=your-flower-password

# =============================================================================
# GRAFANA MONITORING (Optional)
# =============================================================================
GRAFANA_PASSWORD=your-grafana-password

# =============================================================================
# AWS S3 CONFIGURATION (Optional)
# =============================================================================
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# UNIVERSITY SPECIFIC SETTINGS
# =============================================================================
UNIVERSITY_NAME=جامعة المستقبل
UNIVERSITY_NAME_EN=Future University
UNIVERSITY_CODE=FU
UNIVERSITY_DOMAIN=yourdomain.com

# Academic Settings
CURRENT_ACADEMIC_YEAR=2024-2025
CURRENT_SEMESTER=1

# System Limits
MAX_STUDENTS_PER_COURSE=50
MAX_COURSES_PER_STUDENT=8

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_NOTIFICATIONS=True
ENABLE_REPORTS=True

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MAINTENANCE
# =============================================================================
MAINTENANCE_MODE=False

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
CONN_MAX_AGE=600
CACHE_TTL=300

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT OVERRIDES (Remove in production)
# =============================================================================
# Uncomment only for development testing
# DEBUG=True
# ALLOWED_HOSTS=*
# SECURE_SSL_REDIRECT=False