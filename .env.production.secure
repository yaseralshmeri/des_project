# University Management System - Secure Production Environment
# إعدادات الأمان المحسنة للإنتاج

# Security Settings - إعدادات الأمان
SECRET_KEY=university-mgmt-system-2024-secure-production-key-change-in-real-deployment-56789012345
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Database Configuration - إعداد قاعدة البيانات
DATABASE_URL=postgresql://username:password@localhost:5432/university_db

# Security Headers - رؤوس الأمان
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Email Configuration - إعداد البريد الإلكتروني
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@university.edu
EMAIL_HOST_PASSWORD=your-app-password

# University Information - معلومات الجامعة
UNIVERSITY_NAME=جامعة المستقبل
UNIVERSITY_NAME_EN=Future University
UNIVERSITY_CODE=FU
CURRENT_ACADEMIC_YEAR=2024-2025
CURRENT_SEMESTER=1

# Cache Configuration - إعداد التخزين المؤقت
REDIS_URL=redis://localhost:6379/0

# File Storage - تخزين الملفات
MEDIA_ROOT=/var/media/university_system/
STATIC_ROOT=/var/static/university_system/

# Logging Configuration - إعداد السجلات
LOG_LEVEL=INFO
LOG_DIR=/var/log/university_system/

# Monitoring and Error Tracking - المراقبة وتتبع الأخطاء
SENTRY_DSN=your-sentry-dsn-here

# CORS Settings - إعدادات CORS
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True